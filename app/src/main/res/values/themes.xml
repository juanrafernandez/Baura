<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Baura" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@color/background_primary</item>
    </style>

    <style name="Theme.Baura.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#F2EEE0</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Theme.Baura</item>
    </style>
</resources>
